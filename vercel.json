{
  "functions": {
    "api/comments/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/comments",
      "destination": "/api/comments/index.js"
    },
    {
      "source": "/api/comments/:id",
      "destination": "/api/comments/[id].js"
    }
  ]
}
